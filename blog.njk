---
layout: blog_layout.njk
title: Blog
---
<div class="stack:3">
  <div class="center-no-intrinsic">
    <div class="stack full-bleed blog-home-header">
      <h1>{{ title }}</h1>
      <div>Développement web, performances, inclusivité</div>
    </div>
  </div>
  <div class="center-no-intrinsic">
    <div class="stack">
      {%- for post in collections.post | reverse -%}
        <article>
          <h2>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          <p>{{ post.data.date | dateFilter }}</p>
        </article>
      {%- endfor -%}
    </div>
  </div>
</div>
